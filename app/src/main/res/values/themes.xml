<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AsiaSquareShoppingDemo" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name= "colorOnPrimarySurface">@color/prime_500</item>
        <item name="colorControlActivated">@color/prime_500</item>

    </style>


    <style name="TilteStyle">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_ellipsise">
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginEnd">4dp</item>
    </style>


    <style name="FilledBoxColor" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <!-- underline color in FilledBox style, border color in OutlinedBox -->
        <item name="boxStrokeColor">@color/prime_500</item>

        <!-- The color of the label when it is collapsed and the text field is active -->
        <item name="hintTextColor">@color/prime_500</item>

    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize10Percent" parent="">
        <item name="cornerSize">10%</item>
    </style>

    <!-- Text size of Drawer -->
    <style name="NavigationDrawerStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="android:textSize">@dimen/text_size_16</item><!-- text size in menu-->
    </style>


</resources>